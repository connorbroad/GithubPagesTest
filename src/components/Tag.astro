---
const { tagName } = Astro.props;
---

<a class="tag" href={`/github-pages-test/tags/${tagName.toLowerCase()}/`}
    >{tagName}</a
>

<style>
    .tag {
        margin: 0.25em;
        border: dotted 1px #a1a1a1;
        border-radius: 0.5em;
        padding: 0.5em 1em;
        font-size: small;
        background-color: #f8fcfd;
        text-decoration: none;
        display: block;
    }
    .tag:hover {
        background-color: #e0e0e0;
    }
</style>
